<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlarmArmy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AlarmArmy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AlarmArmy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AlarmArmy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NumberPicker">

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="colorControlNormal">@android:color/transparent</item>

    </style>

    <style name="ToggleButton">
        <item name="android:background">@drawable/btn_toggle</item>
        <item name="android:disabledAlpha">?android:disabledAlpha</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LittleToggleButton" parent="ToggleButton">
        <item name="android:textSize">12sp</item>
        <item name="android:enabled">false</item>
    </style>

</resources>